{
    "name": "rochajario/commontools",
    "description": "Common Tools for my apps",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jario Rocha",
            "email": "rochajario@gmail.com"
        }
    ],
	"autoload":{
		"psr-4":{
			"rochajario\\commonTools\\src\\":"app/src",
			"rochajario\\commonTools\\tests\\":"app/tests"
		}
	},
    "require-dev": {
        "phpunit/phpunit": "9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phan/phan": "4.0"
    },
	"scripts":{
		"test": "vendor\\bin\\phpunit app\\tests\\TestBcrypt.php",
		"phan": "vendor\\bin\\phan --allow-polyfill-parser app\\src\\Bcrypt.php",
		"cs":"vendor\\bin\\phpcs --standard=PSR12 app\\src\\",
		"check":[
			"@phan",
			"@cs",
			"@test"
		],
		"post-update-cmd": "@check"
	},
	"scripts-descriptions":{
		"check":"Roda as Verificações dos códigos. (PHAN, PHPCS, PHPUnit)"
	}
}
